{
  "source": [
    "tokens/spacing.json",
    "tokens/radii.json",
    "tokens/motion.json",
    "tokens/focus.json",
    "tokens/shared.json",
    "tokens/themes/light.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/themes/",
      "prefix": "ag",
      "files": [
        {
          "destination": "light.css",
          "format": "css/variables",
          "options": {
            "selector": ":root",
            "outputReferences": false
          }
        }
      ]
    }
  }
}