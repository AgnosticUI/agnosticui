    <ag-button type="reset" variant="secondary">Reset</ag-button>
  </div>

  <div class="code-example">
    &lt;ag-button type="button"&gt;Button Type&lt;/ag-button&gt; &lt;ag-button
    type="submit"&gt;Submit&lt;/ag-button&gt; &lt;ag-button
    type="reset"&gt;Reset&lt;/ag-button&gt;
  </div>
</section>

<section>
  <h2>Button States</h2>
