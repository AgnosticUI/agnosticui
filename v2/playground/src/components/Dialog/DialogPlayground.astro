---
import { Home, MessageSquare, AlertCircle } from "lucide-astro";
---

<style is:global>
  .nav-breadcrumb {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--c-border);
  }

  .nav-home {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--c-text-light);
    font-size: 0.9rem;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-home:hover {
    color: var(--agnostic-primary);
  }

  .nav-home svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>

<div>
  <nav class="nav-breadcrumb">
    <a href="/" class="nav-home">
      <Home />
      <span>Home</span>
    </a>
    / Dialog
  </nav>

  <h1>Dialog Component</h1>
  <p>Modal dialog component with accessibility features.</p>

  <section>
    <h2>Focus Trapping Demo</h2>
    <p style="color: var(--c-text-light); margin-bottom: 1rem;">
      This dialog demonstrates focus trapping with multiple interactive elements. Try:
      <br>â€¢ <strong>Tab</strong> to move forward through focusable elements
      <br>â€¢ <strong>Shift+Tab</strong> to move backward
      <br>â€¢ <strong>Escape</strong> to close the dialog
      <br>â€¢ Notice how focus stays trapped within the dialog boundaries
    </p>
    <ag-dialog id="demo-dialog" heading="Focus Trapping Demo" description="Use Tab and Shift+Tab to navigate between these buttons. Notice how focus stays within the dialog." show-close-button="true">
      <div style="background: #ededed; padding: 1rem 1.5rem; border-radius: 1rem; margin: 1rem 0;">
        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
          <ag-button onclick="console.log('Primary button clicked!')">Primary Button</ag-button>

          <input type="text" placeholder="Focus me with Tab" style="padding: 0.5rem; border: 1px solid #ccc; border-radius: 0.5rem;">

          <ag-button variant="secondary" onclick="console.log('Secondary button clicked!')">Secondary Button</ag-button>

          <textarea placeholder="Try typing here..." style="padding: 0.5rem; border: 1px solid #ccc; border-radius: 0.5rem; min-height: 60px; resize: vertical;"></textarea>

          <div style="display: flex; gap: 0.5rem; justify-content: flex-end; margin-top: 0.5rem;">
            <ag-button variant="outline" onclick="document.getElementById('demo-dialog').open = false">Cancel</ag-button>
            <ag-button variant="danger" onclick="console.log('Action confirmed!'); document.getElementById('demo-dialog').open = false">Confirm Action</ag-button>
          </div>
        </div>
      </div>
    </ag-dialog>
    <button onclick="document.getElementById('demo-dialog').open = true">Open Dialog</button>
  </section>
</div>

<script>
  // Add debugging functions to window for testing
  window.debugDialog = function() {
    const dialog = document.getElementById('demo-dialog');
    console.log('Dialog element:', dialog);
    console.log('Dialog tagName:', dialog?.tagName);
    console.log('Dialog open property:', dialog?.open);
    console.log('Custom element defined:', customElements.get('ag-dialog'));
    return dialog;
  };

  window.forceOpenDialog = function() {
    const dialog = document.getElementById('demo-dialog');
    if (dialog) {
      dialog.open = true;
      console.log('Force opened dialog, open is now:', dialog.open);
    }
  };

  document.addEventListener('DOMContentLoaded', async () => {
    console.log('DOM loaded, importing agnosticui-core...');

    try {
      // Dynamically import the Dialog component
      await import('agnosticui-core');
      console.log('agnosticui-core imported');

      // Wait for the custom element to be defined
      await customElements.whenDefined('ag-dialog');
      console.log('ag-dialog custom element defined');

      // Test that the dialog is working
      const dialog = document.getElementById('demo-dialog');
      if (dialog) {
        console.log('Dialog element found:', dialog);
        console.log('Dialog properties:', {
          tagName: dialog.tagName,
          open: dialog.open,
          heading: dialog.heading,
          description: dialog.description
        });

        // Add event listeners to log Dialog events
        dialog.addEventListener('dialog-open', (event) => {
          console.log('ðŸŸ¢ Dialog Event: dialog-open', {
            type: event.type,
            target: event.target.tagName,
            heading: event.target.heading,
            timestamp: new Date().toLocaleTimeString()
          });
        });

        dialog.addEventListener('dialog-close', (event) => {
          console.log('ðŸ”´ Dialog Event: dialog-close', {
            type: event.type,
            target: event.target.tagName,
            heading: event.target.heading,
            timestamp: new Date().toLocaleTimeString()
          });
        });

        dialog.addEventListener('dialog-cancel', (event) => {
          console.log('ðŸŸ¡ Dialog Event: dialog-cancel', {
            type: event.type,
            target: event.target.tagName,
            heading: event.target.heading,
            reason: 'Escape key or backdrop click',
            timestamp: new Date().toLocaleTimeString()
          });
        });

        console.log('Dialog event listeners added for: dialog-open, dialog-close, dialog-cancel');
      } else {
        console.error('Dialog element not found!');
      }

      // Test button functionality
      const button = document.querySelector('button[onclick*="open = true"]');
      if (button) {
        console.log('Open button found:', button);
      }

    } catch (error) {
      console.error('Error loading dialog component:', error);
    }
  });
</script>