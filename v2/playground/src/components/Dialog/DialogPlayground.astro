---
import { Home, MessageSquare, AlertCircle, Settings, X } from "lucide-astro";
---

<style is:global>
  /* Shared styles are loaded in BaseLayout */

  body {
    margin: 0;
    padding: 0;
    background: var(--c-bg-secondary);
  }

  .nav-breadcrumb {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--c-border);
  }

  .nav-home {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--c-text-light);
    font-size: 0.9rem;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-home:hover {
    color: var(--agnostic-primary);
  }

  .nav-home svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  h1,
  h2 {
    margin: 1rem 0;
  }

  section {
    margin: 2rem 0;
    padding: 1rem;
    border: 1px solid var(--c-border);
    border-radius: 12px;
    background: var(--c-card-bg);
  }

  .code-example {
    background: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 8px;
    font-family: "Monaco", "Menlo", monospace;
    font-size: 0.875rem;
    margin: 1rem 0;
    overflow-x: auto;
  }

  .demo-controls {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

  .demo-controls button {
    padding: 0.5rem 1rem;
    border: 1px solid var(--c-border);
    border-radius: 6px;
    background: var(--c-card-bg);
    color: var(--c-text);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .demo-controls button:hover {
    background: var(--c-bg-secondary);
    border-color: var(--agnostic-primary);
  }

  .demo-controls button:focus {
    outline: 2px solid var(--agnostic-focus);
    outline-offset: 2px;
  }

  .feature-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
    margin: 1rem 0;
  }

  .feature-card {
    background: var(--c-bg-secondary);
    border: 1px solid var(--c-border);
    border-radius: 8px;
    padding: 1rem;
  }

  .feature-card h4 {
    margin-top: 0;
    color: var(--agnostic-primary);
  }

  .event-log {
    background: #0f172a;
    color: #e2e8f0;
    padding: 1rem;
    border-radius: 8px;
    font-family: monospace;
    font-size: 0.875rem;
    max-height: 200px;
    overflow-y: auto;
    margin: 1rem 0;
    border: 1px solid var(--c-border);
  }

  .framework-section {
    margin: 2rem 0;
    padding: 1.5rem;
    border: 2px solid var(--c-border);
    border-radius: 12px;
    background: var(--c-card-bg);
  }

  .framework-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .demo-description {
    color: var(--c-text-light);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .accessibility-note {
    background: #f0f9ff;
    border: 1px solid #0ea5e9;
    border-radius: 8px;
    padding: 1rem;
    margin: 1rem 0;
    color: #0c4a6e;
  }

  .accessibility-note h4 {
    margin-top: 0;
    color: #0ea5e9;
  }
</style>

<div>
  <nav class="nav-breadcrumb">
    <a href="/" class="nav-home">
      <Home />
      <span>Home</span>
    </a>
    / Dialog
  </nav>

  <h1>Dialog Component</h1>
  <p>
    Modal dialog component with comprehensive accessibility features including focus trapping,
    keyboard navigation, and ARIA compliance. Perfect for confirmations, forms, and complex interactions.
  </p>

  <div class="accessibility-note">
    <h4>
      <AlertCircle style="width: 1.25rem; height: 1.25rem; display: inline; margin-right: 0.5rem;" />
      Accessibility Features
    </h4>
    <ul>
      <li><strong>Focus Trapping</strong>: Tab/Shift+Tab cycling contained within dialog</li>
      <li><strong>Keyboard Navigation</strong>: Escape key closes dialog</li>
      <li><strong>Focus Management</strong>: Initial focus setting and restoration on close</li>
      <li><strong>ARIA Compliance</strong>: Proper role, modal, and labeling attributes</li>
      <li><strong>Screen Reader</strong>: Background scroll locking and content isolation</li>
    </ul>
  </div>

  <section>
    <h2>Core Dialog Features</h2>
    <p class="demo-description">
      Interactive demonstration of core dialog functionality with live event logging.
    </p>

    <div class="feature-showcase">
      <div class="feature-card">
        <h4>Basic Dialog</h4>
        <ag-dialog id="basic-dialog" heading="Confirmation" description="Are you sure you want to proceed?">
          <div style="margin: 1rem 0;">
            <button type="button" onclick="document.getElementById('basic-dialog').open = false">Cancel</button>
            <button type="button" onclick="document.getElementById('basic-dialog').open = false" style="margin-left: 0.5rem; background: var(--agnostic-primary); color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px;">Confirm</button>
          </div>
        </ag-dialog>
        <button onclick="document.getElementById('basic-dialog').open = true">Open Basic Dialog</button>
      </div>

      <div class="feature-card">
        <h4>Dialog with Close Button</h4>
        <ag-dialog id="close-button-dialog" heading="Settings" show-close-button="true">
          <div style="margin: 1rem 0;">
            <p>Configure your preferences:</p>
            <label style="display: block; margin: 0.5rem 0;">
              <input type="checkbox"> Enable notifications
            </label>
            <label style="display: block; margin: 0.5rem 0;">
              <input type="checkbox"> Auto-save changes
            </label>
            <button type="button" onclick="document.getElementById('close-button-dialog').open = false" style="margin-top: 1rem; background: var(--agnostic-primary); color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px;">Save Settings</button>
          </div>
        </ag-dialog>
        <button onclick="document.getElementById('close-button-dialog').open = true">Open Settings Dialog</button>
      </div>

      <div class="feature-card">
        <h4>Complex Form Dialog</h4>
        <ag-dialog id="form-dialog" heading="Contact Form">
          <form style="margin: 1rem 0;" onsubmit="event.preventDefault(); document.getElementById('form-dialog').open = false; logEvent('Form submitted!');">
            <label style="display: block; margin: 0.5rem 0;">
              Name:
              <input type="text" required style="display: block; width: 100%; margin-top: 0.25rem; padding: 0.5rem; border: 1px solid var(--c-border); border-radius: 4px;">
            </label>
            <label style="display: block; margin: 0.5rem 0;">
              Email:
              <input type="email" required style="display: block; width: 100%; margin-top: 0.25rem; padding: 0.5rem; border: 1px solid var(--c-border); border-radius: 4px;">
            </label>
            <label style="display: block; margin: 0.5rem 0;">
              Message:
              <textarea required style="display: block; width: 100%; margin-top: 0.25rem; padding: 0.5rem; border: 1px solid var(--c-border); border-radius: 4px; min-height: 80px;"></textarea>
            </label>
            <div style="margin-top: 1rem; display: flex; gap: 0.5rem;">
              <button type="button" onclick="document.getElementById('form-dialog').open = false">Cancel</button>
              <button type="submit" style="background: var(--agnostic-primary); color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px;">Send Message</button>
            </div>
          </form>
        </ag-dialog>
        <button onclick="document.getElementById('form-dialog').open = true">Open Contact Form</button>
      </div>

      <div class="feature-card">
        <h4>No Backdrop Close</h4>
        <ag-dialog id="no-backdrop-dialog" heading="Important Notice" close-on-backdrop="false" description="This dialog requires explicit action.">
          <div style="margin: 1rem 0;">
            <p>Please read the terms and conditions carefully.</p>
            <button type="button" onclick="document.getElementById('no-backdrop-dialog').open = false" style="background: var(--agnostic-primary); color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px;">I Understand</button>
          </div>
        </ag-dialog>
        <button onclick="document.getElementById('no-backdrop-dialog').open = true">Open Protected Dialog</button>
      </div>
    </div>

    <div id="event-log" class="event-log">
      <div><strong>Event Log:</strong></div>
      <div>Dialog events will appear here...</div>
    </div>
  </section>

  <section>
    <h2>Framework Integration</h2>
    <div style="background: #f0f9ff; border: 1px solid #0ea5e9; border-radius: 8px; padding: 1rem; margin: 1rem 0; color: #0c4a6e;">
      <h4 style="margin-top: 0; color: #0ea5e9;">
        <MessageSquare style="width: 1.25rem; height: 1.25rem; display: inline; margin-right: 0.5rem;" />
        Framework Wrappers Coming Soon
      </h4>
      <p>React, Vue, and Svelte wrapper components will be added in future releases following the established patterns from Button, Accordion, Input, and Tooltip components.</p>
      <p>For now, you can use the core Lit Dialog component directly in any framework:</p>
      <div class="code-example">
&lt;!-- Works in React, Vue, Svelte, and vanilla HTML --&gt;
&lt;ag-dialog heading="My Dialog"&gt;
  &lt;p&gt;Dialog content here&lt;/p&gt;
&lt;/ag-dialog&gt;
      </div>
    </div>
  </section>

  <section>
    <h2>Accessibility Testing</h2>
    <p>Test keyboard navigation and focus management:</p>
    <ul>
      <li><strong>Tab/Shift+Tab</strong>: Navigate between focusable elements within dialog</li>
      <li><strong>Escape</strong>: Close dialog from any focusable element</li>
      <li><strong>Focus Trapping</strong>: Tab navigation stays within dialog boundaries</li>
      <li><strong>Focus Restoration</strong>: Returns focus to trigger element on close</li>
    </ul>

    <div class="demo-controls">
      <button onclick="testFocusTrapping()">Test Focus Trapping</button>
      <button onclick="testKeyboardNavigation()">Test Keyboard Navigation</button>
      <button onclick="testMultipleDialogs()">Test Multiple Dialogs</button>
    </div>

    <ag-dialog id="focus-test-dialog" heading="Focus Test Dialog" description="Use Tab/Shift+Tab to test focus trapping">
      <div style="margin: 1rem 0;">
        <label style="display: block; margin: 0.5rem 0;">
          First Input:
          <input type="text" placeholder="First focusable element" style="margin-left: 0.5rem; padding: 0.25rem;">
        </label>
        <label style="display: block; margin: 0.5rem 0;">
          Second Input:
          <input type="text" placeholder="Second focusable element" style="margin-left: 0.5rem; padding: 0.25rem;">
        </label>
        <div style="margin-top: 1rem;">
          <button type="button" onclick="document.getElementById('focus-test-dialog').open = false">Cancel</button>
          <button type="button" onclick="document.getElementById('focus-test-dialog').open = false" style="margin-left: 0.5rem; background: var(--agnostic-primary); color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px;">Last focusable element</button>
        </div>
      </div>
    </ag-dialog>

    <ag-dialog id="nested-dialog" heading="Second Dialog" description="Test multiple dialog support">
      <div style="margin: 1rem 0;">
        <p>This is a second dialog. Notice how background scrolling remains locked.</p>
        <button type="button" onclick="document.getElementById('nested-dialog').open = false" style="background: var(--agnostic-primary); color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px;">Close Second Dialog</button>
      </div>
    </ag-dialog>
  </section>

  <section>
    <h2>Usage Examples</h2>

    <h3>Basic HTML Usage</h3>
    <div class="code-example">
&lt;ag-dialog heading="Confirmation" description="Are you sure?"&gt;
  &lt;button onclick="this.closest('ag-dialog').open = false"&gt;Cancel&lt;/button&gt;
  &lt;button onclick="this.closest('ag-dialog').open = false"&gt;Confirm&lt;/button&gt;
&lt;/ag-dialog&gt;

&lt;!-- Open the dialog --&gt;
&lt;button onclick="document.querySelector('ag-dialog').open = true"&gt;
  Open Dialog
&lt;/button&gt;
    </div>

    <h3>With Close Button</h3>
    <div class="code-example">
&lt;ag-dialog
  heading="Settings"
  show-close-button="true"
  close-on-backdrop="false"&gt;
  &lt;!-- Dialog content --&gt;
&lt;/ag-dialog&gt;
    </div>

    <h3>Event Handling</h3>
    <div class="code-example">
const dialog = document.querySelector('ag-dialog');

dialog.addEventListener('dialog-open', (event) =&gt; {
  console.log('Dialog opened:', event.detail);
});

dialog.addEventListener('dialog-close', (event) =&gt; {
  console.log('Dialog closed:', event.detail);
});

dialog.addEventListener('dialog-cancel', (event) =&gt; {
  console.log('Dialog cancelled (Escape or backdrop):', event.detail);
});
    </div>
  </section>
</div>

<script>
  // Import the Dialog component
  import "agnosticui-core";

  // Event logging functionality
  function logEvent(message) {
    const log = document.getElementById('event-log');
    if (log) {
      const timestamp = new Date().toLocaleTimeString();
      const entry = document.createElement('div');
      entry.textContent = `[${timestamp}] ${message}`;
      log.appendChild(entry);
      log.scrollTop = log.scrollHeight;
    }
  }

  // Wait for DOM and web components to be ready
  document.addEventListener('DOMContentLoaded', async () => {
    // Wait for dialog component to be defined
    await customElements.whenDefined('ag-dialog');
    logEvent('Dialog component loaded and ready');

    // Add event listeners to all dialogs
    const dialogs = document.querySelectorAll('ag-dialog');
    dialogs.forEach((dialog, index) => {
      dialog.addEventListener('dialog-open', (event) => {
        logEvent(`Dialog #${index + 1} opened - ${dialog.heading || 'Untitled'}`);
      });

      dialog.addEventListener('dialog-close', (event) => {
        logEvent(`Dialog #${index + 1} closed - ${dialog.heading || 'Untitled'}`);
      });

      dialog.addEventListener('dialog-cancel', (event) => {
        logEvent(`Dialog #${index + 1} cancelled (Escape/backdrop) - ${dialog.heading || 'Untitled'}`);
      });
    });
  });

  // Testing functions
  window.testFocusTrapping = function() {
    logEvent('Opening focus test dialog - try Tab/Shift+Tab to test focus trapping');
    document.getElementById('focus-test-dialog').open = true;
  };

  window.testKeyboardNavigation = function() {
    logEvent('Opening keyboard test dialog - press Escape to test keyboard closing');
    document.getElementById('focus-test-dialog').open = true;
  };

  window.testMultipleDialogs = function() {
    logEvent('Opening multiple dialogs to test scroll lock management');
    document.getElementById('basic-dialog').open = true;
    setTimeout(() => {
      document.getElementById('nested-dialog').open = true;
    }, 500);
  };

  // Make logEvent available globally for inline event handlers
  window.logEvent = logEvent;
</script>