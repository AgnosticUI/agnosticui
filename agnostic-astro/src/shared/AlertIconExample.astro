---
import XElement from 'astro-xelement'

/**
 * This is just a sample SVG Icon that knows how to align its
 * color to the type of warning, error, succes, and info.
 */

const { AlertIconExample } = XElement;
const {
  utilityClasses,
  type,
} = Astro.props


const _utilityClasses = utilityClasses;
const _type = type;

const getColor = (t) => {
  switch (t) {
    case "warning":
      return "var(--agnostic-warning-border-accent)";
    case "info":
      return "var(--agnostic-primary-dark)";
    case "success":
      return "var(--agnostic-action-dark)";
    case "error":
      return "var(--agnostic-error-dark)";
    default:
      return "var(--agnostic-gray-mid-dark)";
  }
};
---
<AlertIconExample
  define:vars={{
    getColor: getColor,
    utilityClasses: _utilityClasses,
    type: _type,
  }}
  style="line-height: 1"
>
  <svg
    class={`${utilityClasses} alert-icon`}
    style={`color: ${getColor(type)}`}
    xmlns="http://www.w3.org/2000/svg"
    height="24"
    viewBox="0 0 24 24"
    width="24"
  >
    <path d="M0 0h24v24H0z" fill="none"></path>
    <path
      fill="currentColor"
      d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"></path>
  </svg>
</AlertIconExample>
