---
import XElement from 'astro-xelement'

import AgDialog from "./Dialog.astro";

export interface Props {
  uniqueId: string;
  placement: 'start' | 'end' | 'top' | 'bottom';
  titleId: string;
  role?: 'alertdialog' | 'dialog';
  isAnimationFadeIn?: boolean;
}

const {
  uniqueId,
  placement,
  titleId,
  role = 'dialog',
  isAnimationFadeIn = true,
} = Astro.props as Props;

const { AgDrawer } = XElement;
---
<AgDrawer>
  <AgDialog
    dialogId={uniqueId}
    drawerPlacement={placement}
    titleId={titleId}
    role={role}
    isAnimatedFadeIn={isAnimationFadeIn}
  >
    <slot />
  </AgDialog>
</AgDrawer>
