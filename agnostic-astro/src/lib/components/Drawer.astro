---
import XElement from 'astro-xelement'

import AgDialog from "./Dialog.astro";

const { AgDrawer } = XElement;
const {
  uniqueId,
  placement,
  titleId,
  role = 'dialog',
  isAnimationFadeIn = true,
} = Astro.props
---
<AgDrawer>
  <AgDialog
    dialogId={uniqueId}
    drawerPlacement={placement}
    titleId={titleId}
    role={role}
    isAnimationFadeIn={isAnimationFadeIn}
  >
    <slot />
  </AgDialog>
</AgDrawer>
