---
import 'agnostic-css/src/components/alert/alert.css';

import XElement from 'astro-xelement'
import { pluckClassesFromAttrs } from '../../shared/pluckClassesFromAttrs';

export interface Props {
  isBullet?: boolean;
  isArrow?: boolean;
  isSlash?: boolean;
}

const {isBullet, isArrow, isSlash, ...attrs} = Astro.props as Props;

const { nav: AgBreadcrumbs } = XElement;
const { additionalClassList } = pluckClassesFromAttrs(attrs);
---
<AgBreadcrumbs class='breadcrumbs' {...additionalClassList}>
  <slot />
</AgBreadcrumbs>
