---
import 'agnostic-css/src/components/tabs/tabs.css';

import XElement from 'astro-xelement'
import { pluckClassesFromAttrs } from '../../shared/pluckClassesFromAttrs';

export interface Props {
  id: string;
  controlsPanelId: string;
  size?: 'small' | 'large' | 'xlarge' | '';
}

const {
  id,
  controlsPanelId,
  size = '',
  ...attrs
} = Astro.props as Props;

const { button: AgTabButton } = XElement;
const { additionalClassList } = pluckClassesFromAttrs(attrs);
---
<AgTabButton
  id={id}
  class:list={[
    'tab-item',
    'tab-button',
    additionalClassList,
  ]}
  role="tab"
  aria-controls={controlsPanelId}
  {...attrs}
>
  <slot />
</AgTabButton>
