---
import 'agnostic-css/src/components/close/close.css';

import XElement from 'astro-xelement'
import { pluckClassesFromAttrs } from '../../shared/pluckClassesFromAttrs';

const { button: AgClose } = XElement;
const {size, ...attrs} = Astro.props
const { additionalClassList } = pluckClassesFromAttrs(attrs);
---
<AgClose
  class:list={[
    'close-button',
    {
      'close-button-small': size == 'small' ? true : false,
      'close-button-large': size == 'large' ? true : false,
      'close-button-xlarge': size == 'xlarge' ? true : false,
    },
    additionalClassList,
  ]}
  {...attrs}
>
  <svg class="close" viewBox="0 0 24 24" aria-hidden="true">
    <path fill="currentColor" d="M.439 21.44a1.5 1.5 0 0 0 2.122 2.121l9.262-9.261a.25.25 0 0 1 .354 0l9.262 9.263a1.5 1.5 0 1 0 2.122-2.121L14.3 12.177a.25.25 0 0 1 0-.354l9.263-9.262A1.5 1.5 0 0 0 21.439.44L12.177 9.7a.25.25 0 0 1-.354 0L2.561.44A1.5 1.5 0 0 0 .439 2.561L9.7 11.823a.25.25 0 0 1 0 .354Z" />
  </svg>
</AgClose>
