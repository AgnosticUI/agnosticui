---
import 'agnostic-css/src/components/breadcrumb/breadcrumb.css';

import XElement from 'astro-xelement'
import { pluckClassesFromAttrs } from '../../shared/pluckClassesFromAttrs';

export interface Props {
  isBullet?: boolean;
  isArrow?: boolean;
  isSlash?: boolean;
}

const { isBullet, isArrow, isSlash, ...attrs } = Astro.props as Props;

const { ol: AgBreadcrumb, } = XElement;
const { additionalClassList } = pluckClassesFromAttrs(attrs);
---
<AgBreadcrumb
  class:list={[
    'breadcrumb',
    {
      'breadcrumb-arrow': isArrow? true : false,
      'breadcrumb-bullet': isBullet ? true : false,
      'breadcrumb-slash': isSlash ? true : false,
    },
    additionalClassList,
  ]}
  {...attrs}
>
  <slot />
</AgBreadcrumb>
