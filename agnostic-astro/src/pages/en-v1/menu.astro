---
import { Code } from 'astro/components';

import XElement from 'astro-xelement'

import AgMenu from '../../lib/components/Menu.astro'
import AgMenuItem from '../../lib/components/MenuItem.astro'

import BaseLayout from '../../layouts/BaseLayout.astro';

const { HContainer} = XElement;
---
  <BaseLayout>
    <div class="h3 mbs40">Menu</div>
    <HContainer class="container">
      <p class="mbs24 mbe24">The <a href="https://github.com/agnosticui/agnosticui/agnostic-astro" target="_blank">agnostic-astro</a> package utilizes utilizes <a href="https://github.com/astro-community/xelement" target="_blank">XElement</a>. Here's an <a href="https://github.com/AgnosticUI/agnosticui/tree/master/agnostic-astro" target="_blank">agnostic-astro</a> Menu use:</p>
      <Code code={`<tbd>tbd</tbd>`} lang="html" wrap />
      <div class="mbe24" />
      <AgMenu
        id="simple"
        buttonLabel="Tennis Players"
      >
        <AgMenuItem>Andre Agassi</AgMenuItem>
        <AgMenuItem>Serena Williams</AgMenuItem>
        <AgMenuItem isDisabled>Rafael Nadal</AgMenuItem>
        <AgMenuItem>Roger Federer</AgMenuItem>
        <AgMenuItem>Althea Gibson</AgMenuItem>
        <AgMenuItem>Bjorn Borg</AgMenuItem>
      </AgMenu>
      <div class="mbe40" />
      <AgMenu
        id="simplesmall"
        buttonLabel="Tennis Players (small)"
        size="small"
      >
        <AgMenuItem>Andre Agassi</AgMenuItem>
        <AgMenuItem>Serena Williams</AgMenuItem>
        <AgMenuItem isDisabled>Rafael Nadal</AgMenuItem>
        <AgMenuItem>Roger Federer</AgMenuItem>
        <AgMenuItem>Althea Gibson</AgMenuItem>
        <AgMenuItem>Bjorn Borg</AgMenuItem>
      </AgMenu>
      <div class="mbe40" />
      <AgMenu
        id="simple2"
        buttonLabel="Tennis Players (large)"
        size="large"
      >
        <AgMenuItem>Andre Agassi</AgMenuItem>
        <AgMenuItem>Serena Williams</AgMenuItem>
        <AgMenuItem isDisabled>Rafael Nadal</AgMenuItem>
        <AgMenuItem>Roger Federer</AgMenuItem>
        <AgMenuItem>Althea Gibson</AgMenuItem>
        <AgMenuItem>Bjorn Borg</AgMenuItem>
      </AgMenu>
      <div class="mbe40" />
      <AgMenu
        id="kebabs"
        buttonLabel="Tennis Players kebab"
        type="kebab"
      >
        <AgMenuItem>Andre Agassi</AgMenuItem>
        <AgMenuItem>Serena Williams</AgMenuItem>
        <AgMenuItem isDisabled>Rafael Nadal</AgMenuItem>
        <AgMenuItem>Roger Federer</AgMenuItem>
        <AgMenuItem>Althea Gibson</AgMenuItem>
        <AgMenuItem>Bjorn Borg</AgMenuItem>
      </AgMenu>
      <div class="mbe40" />
      <AgMenu
        id="hamburger"
        buttonLabel="Tennis Players hamburger"
        type="hamburger"
      >
        <AgMenuItem>Andre Agassi</AgMenuItem>
        <AgMenuItem>Serena Williams</AgMenuItem>
        <AgMenuItem isDisabled>Rafael Nadal</AgMenuItem>
        <AgMenuItem>Roger Federer</AgMenuItem>
        <AgMenuItem>Althea Gibson</AgMenuItem>
        <AgMenuItem>Bjorn Borg</AgMenuItem>
      </AgMenu>
      <div class="mbe40" />
      <AgMenu
        id="meatball"
        buttonLabel="Tennis Players meatball"
        type="meatball"
      >
        <AgMenuItem>Andre Agassi</AgMenuItem>
        <AgMenuItem>Serena Williams</AgMenuItem>
        <AgMenuItem isDisabled>Rafael Nadal</AgMenuItem>
        <AgMenuItem>Roger Federer</AgMenuItem>
        <AgMenuItem>Althea Gibson</AgMenuItem>
        <AgMenuItem>Bjorn Borg</AgMenuItem>
      </AgMenu>
    </HContainer>
  </BaseLayout>
  