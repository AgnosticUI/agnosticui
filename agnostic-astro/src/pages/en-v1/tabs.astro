          </AgTabPanel>
          <AgTabPanel id="panel-vertical-2">
            <p>Tab 2 content (no padding or margins so consumer can control desired gutters)</p>
          </AgTabPanel>
          <AgTabPanel id="panel-vertical-3">
            <p>Tab 3 content</p>
          </AgTabPanel>
          <AgTabPanel id="panel-vertical-4">
            <p>Tab 4 content</p>
          </AgTabPanel>
        </Fragment>
      </AgTabs>
      <div class="mbs64 mbe24 h4">Disabled</div>
      <AgTabs isDisabled>
        <Fragment slot="buttons">
          <AgTabButton id="button-disabled-1" controlsPanelId="panel-disabled-1">Disabled Tabs</AgTabButton>
        </Fragment>
        <Fragment slot="panels">
          <AgTabPanel id="panel-disabled-1">
            <p>Panel content</p>
          </AgTabPanel>
        </Fragment>
      </AgTabs>
      <div class="mbs64 mbe24 h4">Disabled Options</div>
      <AgTabs disabledOptions={[1, 3]}>
        <Fragment slot="buttons">
          <AgTabButton id="doButton1" controlsPanelId="doPanel1">Tab 1</AgTabButton>
          <AgTabButton id="doButton2" controlsPanelId="doPanel2">Tab 2 (disabled)</AgTabButton>
          <AgTabButton id="doButton3" controlsPanelId="doPanel3">Tab 3</AgTabButton>
          <AgTabButton id="doButton4" controlsPanelId="doPanel4">Tab 4 (disabled)</AgTabButton>
        </Fragment>
        <Fragment slot="panels">
          <AgTabPanel id="doPanel1"><p>Panel 1</p></AgTabPanel>
          <AgTabPanel id="doPanel2"><p>Panel 2</p></AgTabPanel>
          <AgTabPanel id="doPanel3"><p>Panel 3</p></AgTabPanel>
          <AgTabPanel id="doPanel4"><p>Panel 4</p></AgTabPanel>
        </Fragment>
      </AgTabs>
