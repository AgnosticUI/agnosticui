{
	"name": "agnostic-css",
	"version": "1.0.3-30",
	"description": "AgnosticUI (css)",
	"license": "Apache-2.0",
	"dependencies": {
		"@frctl/fractal": "^1.5.11",
		"autoprefixer": "^10.0.1",
		"concat": "^1.0.3",
		"css-minify": "^1.0.1",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"postcss": "^8.3.6",
		"postcss-cli": "^8.0.0",
		"prettier": "^2.2.1"
	},
	"scripts": {
		"test": "echo no tests yet...",
		"format": "yarn run prettier --write './src/**/*.css' './public/css-src/*.css'",
		"stylelint": "npx stylelint \"./src/components/**/*.css\" \"./public/css-src/*.css\"",
		"concat:css:globals": "concat -o ./public/css-dist/common.concat.css ./public/css-src/reset.css ./public/css-src/utilities.css ./public/css-src/colors.css ./public/css-src/focus.css ./public/css-src/spacing.css ./public/css-src/typography.css ./public/css-src/motion.css ./public/css-src/radius.css ./public/css-src/flex.css ./public/css-src/margin.css ./public/css-src/padding.css ./public/css-src/links.css",
		"concat:css:components": "concat -o ./public/css-dist/components.concat.css src/components/**/*.css",
		"prefix:css:global": "postcss --use autoprefixer -b \"last 2 versions\" ./public/css-dist/common.concat.css -o ./public/css-dist/common.prefixed.css",
		"prefix:css:components": "postcss --use autoprefixer -b \"last 2 versions\" ./public/css-dist/components.concat.css -o ./public/css-dist/components.prefixed.css",
		"min:css:global": "css-minify -f ./public/css-dist/common.prefixed.css",
		"min:css:components": "css-minify -f ./public/css-dist/components.prefixed.css",
		"cp:css:global": "cp ./css-dist/common.prefixed.min.css ./public/css-dist/common.min.css",
		"cp:css:components": "cp ./css-dist/components.prefixed.min.css ./public/css-dist/components.min.css",
		"cp:css:fractal": "cp ./public/css-dist/components.min.css ./public/css/components.min.css && cp ./public/css-dist/common.min.css ./public/css/common.min.css",
		"fractal:start": "fractal start --watch --port 3003 --sync",
		"start": "yarn build && yarn fractal:start",
		"fractal:build": "yarn build && fractal build",
		"build": "yarn format && yarn concat:css:globals && yarn concat:css:components && yarn prefix:css:global && yarn prefix:css:components && yarn min:css:global && yarn min:css:components && yarn cp:css:global && yarn cp:css:components && yarn cp:css:fractal"
	},
	"devDependencies": {
		"stylelint": "^14.0.1",
		"stylelint-config-standard": "^23.0.0"
	}
}
