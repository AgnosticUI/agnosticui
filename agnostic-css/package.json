{
	"name": "agnostic-css",
	"version": "1.0.21",
	"description": "AgnosticUI (css)",
	"license": "Apache-2.0",
	"files": [
		"public/css-dist/**/*.css",
		"src/**/*.css"
	],
	"scripts": {
		"test": "echo no tests yet...",
		"format": "npx stylelint \"./src/components/**/*.css\" \"./public/css-src/*.css\"",
		"stylelint": "npx stylelint \"./src/components/**/*.css\" \"./public/css-src/*.css\"",
		"concat:css:resets": "concat -o ./public/css-dist/common.resets.concat.css ./public/css-src/resets/reset.css ./public/css-src/resets/links.css",
		"concat:css:utilities": "concat -o ./public/css-dist/common.utilities.concat.css ./public/css-src/utilities/utilities.css ./public/css-src/utilities/flex.css ./public/css-src/utilities/margin.css ./public/css-src/utilities/padding.css",
		"concat:css:props": "concat -o ./public/css-dist/common.properties.concat.css ./public/css-src/colors.css ./public/css-src/focus.css ./public/css-src/sizes.css ./public/css-src/typography.css ./public/css-src/motion.css ./public/css-src/radius.css",
		"concat:css:globals": "concat -o ./public/css-dist/common.concat.css ./public/css-dist/common.properties.concat.css ./public/css-dist/common.resets.concat.css  ./public/css-dist/common.utilities.concat.css",
		"concat:css:components": "concat -o ./public/css-dist/components.concat.css src/components/**/*.css",
		"prefix:css:global": "postcss --use autoprefixer -b \"last 2 versions\" ./public/css-dist/common.concat.css -o ./public/css-dist/common.prefixed.css",
		"prefix:css:components": "postcss --use autoprefixer -b \"last 2 versions\" ./public/css-dist/components.concat.css -o ./public/css-dist/components.prefixed.css",
		"min:css:opinions": "cp ./public/css-src/resets/opinions.css ./public/css-dist/opinions.css && css-minify -f ./public/css-dist/opinions.css",
		"min:css:resets": "css-minify -f ./public/css-dist/common.resets.concat.css",
		"min:css:utilities": "css-minify -f ./public/css-dist/common.utilities.concat.css",
		"min:css:props": "css-minify -f ./public/css-dist/common.properties.concat.css",
		"min:css:global": "css-minify -f ./public/css-dist/common.prefixed.css",
		"min:css:components": "css-minify -f ./public/css-dist/components.prefixed.css",
		"cp:css:opinions": "cp ./css-dist/opinions.min.css ./public/css-dist/opinions.min.css",
		"cp:css:resets": "cp ./css-dist/common.resets.concat.min.css ./public/css-dist/common.resets.min.css",
		"cp:css:utilities": "cp ./css-dist/common.utilities.concat.min.css ./public/css-dist/common.utilities.min.css",
		"cp:css:props": "cp ./css-dist/common.properties.concat.min.css ./public/css-dist/common.properties.min.css",
		"cp:css:global": "cp ./css-dist/common.prefixed.min.css ./public/css-dist/common.min.css",
		"cp:css:components": "cp ./css-dist/components.prefixed.min.css ./public/css-dist/components.min.css",
		"cp:css:fractal": "cp ./public/css-dist/components.min.css ./public/css/components.min.css && cp ./public/css-dist/common.min.css ./public/css/common.min.css",
		"fractal:start": "fractal start --watch --port 3003 --sync",
		"start": "npm run build && npm run fractal:start",
		"fractal:build": "npm run build && fractal build",
		"build": "npm run build:tokens && npm run format && npm run concat:css:resets && npm run concat:css:utilities && npm run concat:css:props && npm run concat:css:globals && npm run concat:css:components && npm run prefix:css:global && npm run prefix:css:components && npm run min:css:global && npm run min:css:components &&  npm run min:css:resets && npm run min:css:utilities && npm run min:css:props && npm run min:css:opinions && npm run cp:css:opinions && npm run cp:css:global && npm run cp:css:components && npm run cp:css:resets && npm run cp:css:utilities && npm run cp:css:props && npm run cp:css:fractal",
		"transform": "style-dictionary build --config ",
		"build:colors": "npm run transform ./tokens/colors/config.colors.json",
		"build:focus": "npm run transform ./tokens/focus/config.focus.json",
		"build:motion": "npm run transform ./tokens/motion/config.motion.json",
		"build:sizes": "npm run transform ./tokens/sizes/config.sizes.json",
		"build:type": "npm run transform ./tokens/typography/config.typography.json",
		"build:tokens": "npm run build:colors && npm run build:focus && npm run build:motion && npm run build:sizes && npm run build:type"
	},
	"dependencies": {
		"@frctl/fractal": "^1.5.11",
		"autoprefixer": "^10.0.1",
		"concat": "^1.0.3",
		"css-minify": "^1.0.1",
		"postcss": "^8.3.6",
		"postcss-cli": "^8.0.0"
	},
	"devDependencies": {
		"style-dictionary": "^3.0.3",
		"stylelint": "^14.0.1",
		"stylelint-config-standard": "^23.0.0"
	}
}
