{
  "source": ["tokens/colors-light/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "public/css-src/",
      "prefix": "agnostic",
      "files": [{
        "format": "css/variables",
        "destination": "colors-light.css",
        "options": {
          "selector": ":where(html)",
          "outputReferences": true
        }
      }]
    }
  }
}
